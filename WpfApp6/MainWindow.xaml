<Window x:Class="WpfApp6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <DataGrid CanUserAddRows="False" x:Name="ReaderGen" SelectionChanged="ReaderGen_SelectionChanged"/>
        <TextBox x:Name="nameTbx" Height="42"/>
        <ComboBox x:Name="genreCbx" Height="32" DisplayMemberPath="genre" SelectedValuePath="ID_Genre"/>
        <Button Content="Вторая таблица" Click="Button_Click"/>
   
    </StackPanel>
</Window>
